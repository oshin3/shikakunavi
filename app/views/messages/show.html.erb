<h1>ID: <%= @message.id %> の資格詳細</h1>

<table class="table table-bordered">
  <tr>
    <th>ID</th>
    <td><%= @message.id %></td>
  </tr>
  <tr>
    <th>資格名</th>
    <td><%= @message.title %></td>
  </tr>
  <tr>
    <th>ひとことメッセージ</th>
    <td><%= @message.content %></td>
  </tr>
</table>

<%= link_to 'この資格を編集する', edit_message_path(@message), class: 'btn btn-light' %>
<%= link_to 'この資格を削除する', @message, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>